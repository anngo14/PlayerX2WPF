<UserControl x:Class="PlayerX.Views.Home.HomeItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlayerX.Views.Home"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800" Background="Transparent"
             Focusable="True">
    <UserControl.Resources>
       
    </UserControl.Resources>
    <Grid Width="800" Height="200" HorizontalAlignment="Left" VerticalAlignment="Stretch">
        <Image HorizontalAlignment="Left" Height="175" VerticalAlignment="Stretch" Width="175" Margin="25,0,0,0" Source="{Binding Menu.ImgPath}"/>
        <TextBlock x:Name="ItemText" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Menu.Name}" VerticalAlignment="Center" Foreground="#FFFAFAFA" FontSize="40" Margin="225,0,0,0" MaxWidth="550"/>
        <Button Background="Transparent" Command="{Binding FolderCommand}" BorderBrush="Transparent" Width="800" Height="200" Opacity="0.25">
        </Button>
    </Grid>
</UserControl>
