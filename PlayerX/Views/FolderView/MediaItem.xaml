<UserControl x:Class="PlayerX.Views.FolderView.MediaItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlayerX.Views.FolderView"
             mc:Ignorable="d" >
    <Grid>
        <Image HorizontalAlignment="Center" Height="200" VerticalAlignment="Top" Width="200" Source="/Images/mediafile.png"/>
        <TextBlock x:Name="FileNameText" HorizontalAlignment="Center" TextWrapping="Wrap" MaxWidth="200" Text="{Binding Media.FileName}" VerticalAlignment="Top" Foreground="White" TextAlignment="Center" Margin="0,200,0,0" FontSize="24"/>
        <Button Background="Transparent" Command="{Binding PlayerCommand}" BorderBrush="Transparent" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Opacity="0.25">
        </Button>
    </Grid>
</UserControl>
