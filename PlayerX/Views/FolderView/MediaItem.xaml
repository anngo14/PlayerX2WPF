<UserControl x:Class="PlayerX.Views.FolderView.MediaItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlayerX.Views.FolderView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="250">
    <Grid MaxWidth="300">
        <Image HorizontalAlignment="Center" Height="200" VerticalAlignment="Top" Width="200" Margin="0,5,0,0" Source="/Images/mediafile.png"/>
        <TextBlock x:Name="FileNameText" HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding Media.FileName}" VerticalAlignment="Bottom" Foreground="White" TextAlignment="Center" Margin="0,0,0,50" FontSize="25"/>
        <Button Background="Transparent" Command="{Binding PlayerCommand}" BorderBrush="Transparent" Width="250" Height="300" Opacity="0.25">
        </Button>
    </Grid>
</UserControl>
